<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="AppCompatTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/almostWhite</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!--<style name="AppTheme.Launcher">-->
    <!--<item name="android:windowBackground">@drawable/launch_screen</item>-->
    <!--</style>-->

    <style name="AppTheme.Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/MaterialToolbar</item>
    </style>

</resources>